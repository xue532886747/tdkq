<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.example.towerdriver.weight.CircleImageView
        android:id="@+id/iv_circle_head"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="@color/main_top_tv_color_no"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_user_status"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/main_user_head_bg"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/iv_circle_head"
        app:layout_constraintStart_toStartOf="@+id/iv_circle_head"
        app:layout_constraintTop_toTopOf="@+id/iv_circle_head">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_medal_bronze" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铜牌会员"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_7" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>